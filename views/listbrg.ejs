<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>List Daftar Barang</title>
</head>

<body>
  <a href="/addbrg">Add Barang</a>
  <br>


  <table border="1px">
    <tr>
      <th>Kode Barang</th>
      <th>Nama Barang</th>
      <th>Harga Beli</th>
      <th>Harga Jual</th>
    </tr>
    <% tbl_barang.forEach((barang) => { %>
    <tr>
      <td><%= barang.kd_brg %></td>
      <td><%= barang.nama %></td>
      <td><%= barang.hrg_beli %></td>
      <td><%= barang.hrg_jual %></td>
      <td><form action="/deletebrg/<%= barang.id %>" method="post">
      <input type="submit" value="Hapus"></form></td>
      <td><a href="/editbrg/<%= barang.id %>">Edit</a></td>
    </tr>
    <% }) %>


  </table>


</body>

</html>